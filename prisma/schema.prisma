generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Autor {
  id_autor     String  @id @default(uuid()) @db.Uuid
  nombre       String
  nacionalidad String?
  biografia    String?
  correo       String  @unique

  libros Libro[]

  @@map("autores")
}

model Categoria {
  id_categoria     String  @id @default(uuid()) @db.Uuid
  nombre_categoria String
  clasificacion    String

  libros Libro[]

  @@map("categorias")
}

model Libro {
  id_libro         String  @id @default(uuid()) @db.Uuid
  titulo           String
  anio_publicacion Int
  resumen          String?

  autor_id     String   @db.Uuid
  categoria_id String   @db.Uuid

  autor     Autor     @relation(fields: [autor_id], references: [id_autor])
  categoria Categoria @relation(fields: [categoria_id], references: [id_categoria])

  @@map("libros")
}
